import pymysql
import pandas as pd
import csv
import telebot
import schedule
import time


mydb = pymysql.connect(host="localhost",
	                   port=3306,user="root",
	                   password="didmoroz",
	                   database="phrase_of_a_day")

print("Connection established sucessfully")

mycursor = mydb.cursor()

# a = mycursor.execute('SELECT * FROM phrase;')

a = mycursor.execute("""SELECT Ph FROM phrase
                     ORDER BY RAND()
                     LIMIT 1;""")

# version = mycursor.fetchall()
version2 = mycursor.fetchone()

# print(version)
print(version2)


bot = telebot.TeleBot('token')

def msg():
    # chat_id = 184852796
    chat_id = -1001464657935
    bot.send_message(chat_id, '{}'.format(version2[0]))

schedule.every().day.at("10:10").do(msg)

while True:
    schedule.run_pending()
    time.sleep(1)



@bot.message_handler(content_types=['text'])
def send_text(message):
    if message.text.lower() == 'привет':
        bot.send_message(message.chat.id, 'Привет')

    elif message.text.lower() == 'как дела?':
        bot.send_message(message.chat.id, 'Нормально, а у тебя?')

    elif message.text.lower() == 'фраза':
        bot.send_message(message.chat.id, 'Фраза дня -{}'.format(version2[0]) )
    

if __name__ == '__main__':

    bot.polling(none_stop=True)
